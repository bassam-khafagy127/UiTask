            android:orientation="vertical">

            <!-- subject-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/subjectIconIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subjectFieldTv"
                    style="@style/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="@string/subject"
                    android:textColor="@color/textColorBlack"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/subjectIconIv"
                    app:layout_constraintStart_toEndOf="@id/subjectIconIv"
                    app:layout_constraintTop_toTopOf="@id/subjectIconIv" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subject_stateTv"
                    style="@style/medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="bottom"
                    android:text="@string/required"
                    android:textColor="@color/violetBtnColors"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/subjectValue_ed"
                    app:layout_constraintStart_toEndOf="@id/subjectFieldTv"
                    app:layout_constraintTop_toTopOf="@id/subjectFieldTv" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/subjectValue_ed"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/transparent"
                    android:hint="@string/subject"
                    android:textColor="@color/hintTextColor"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/subjectMicrophone_Iv"
                    app:layout_constraintStart_toStartOf="@id/subjectFieldTv"
                    app:layout_constraintTop_toBottomOf="@id/subjectFieldTv" />

