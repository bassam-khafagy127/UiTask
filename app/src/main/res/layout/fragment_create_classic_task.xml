                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/priorityFieldTv"
                    style="@style/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/priority"
                    android:textColor="@color/textColorBlack"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/priorityIconIv"
                    app:layout_constraintStart_toEndOf="@id/priorityIconIv"
                    app:layout_constraintTop_toTopOf="@id/priorityIconIv" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/priorityFieldStateTv"
                    style="@style/medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="bottom"
                    android:text="@string/required"
                    android:textColor="@color/violetBtnColors"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/priorityFieldTv"
                    app:layout_constraintStart_toEndOf="@id/priorityFieldTv"
                    app:layout_constraintTop_toTopOf="@id/priorityFieldTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="16dp"
                android:background="@color/hintTextColor" />

            <!-- TO DO -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_todo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/todoIconIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_tasks"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/todoFieldTv"
                    style="@style/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="@string/to_do_list"
                    android:textColor="@color/textColorBlack"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/todoIconIv"
                    app:layout_constraintStart_toEndOf="@id/todoIconIv"
                    app:layout_constraintTop_toTopOf="@id/todoIconIv" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/todoValue_ed"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/hintTextColor"
                    android:textSize="14sp"
                    android:background="@color/transparent"
                    android:hint="@string/add_todo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/todoFieldTv"
                    app:layout_constraintTop_toBottomOf="@id/todoFieldTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:background="@color/hintTextColor" />

            <!-- attachment -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/attachmentIconIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_attached_files"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/attachmentFieldTv"
                    style="@style/regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:gravity="start"
                    android:text="@string/attachment"
                    android:textColor="@color/textColorBlack"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/attachmentIconIv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/attachmentIconIv"
                    app:layout_constraintTop_toTopOf="@id/attachmentIconIv" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:background="@color/hintTextColor" />

            <!-- Select Project -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_select_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/select_projectIconIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_select_project"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/select_projectFieldTv"
                    style="@style/regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:gravity="start"
                    android:text="@string/select_project"
                    android:textColor="@color/textColorBlack"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/select_projectIconIv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/select_projectIconIv"
                    app:layout_constraintTop_toTopOf="@id/select_projectIconIv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/lastSplit"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="16dp"
                android:background="@color/hintTextColor" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save_btn"
                style="@style/blueButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginBottom="40dp"
                android:text="@string/create_task" />
        </LinearLayout>
    </ScrollView>
</layout>